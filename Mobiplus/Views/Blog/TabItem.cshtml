@model List<Mobiplus.Models.BlogModel.Item>

<div class="row blog_row blog-mg">
    @* du lieu giả*@

    @foreach (var i in Model)
    {
        if (i.id != "4")
        {
            <div class="col-lg-4 col-md-6 col-sm-12">
                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@i.id">
                    <div class="card mb-4 box-shadow blog__tab_shadow">
                        <img class="card-img-top" src="@i.img">
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-6 pr-0">
                                    <i class="ri-time-line icon__blog"></i>
                                    <span class="font__14">@i.time</span>
                                </div>
                                <div class="col-6">
                                    <i class="ri-file-list-line icon__blog"></i>
                                    <span class="font__14">@i.theme</span>
                                </div>
                            </div>
                            <h5 class="mt-2">@i.title</h5>
                            <p class="card-text text-blog">@i.content</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-more">
                                    <h7>Xem thêm <span class="blog-them"></span></h7>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }

    }


    @* *************@

</div>
