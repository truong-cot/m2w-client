    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC6qXQQnXHMJEglRAIh4-sbcX8HkWDrO7A"></script>
    <script src="~/lib/anime-master/lib/anime.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/OwlCarousel2/owl.carousel.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {
            var pathName = window.location.pathname;
            if (pathName == "/") {
                $(".Home").addClass("active")
            }
            if (pathName == "/AboutUs") {
                $(".AboutUs").addClass("active")
            }
            if (pathName == "/Solutions") {
                $(".Solutions").addClass("active")
            }
            if (pathName == "/Project") {
                $(".Project").addClass("active")
            }
            if (pathName == "/Blog") {
                $(".Blog").addClass("active")
            }
            if (pathName == "/Requiment") {
                $(".Requiment").addClass("active")
            }
            if (pathName == "/ContactUs") {
                $(".ContactUs").addClass("active")
            }
        })
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
</body>
</html>
